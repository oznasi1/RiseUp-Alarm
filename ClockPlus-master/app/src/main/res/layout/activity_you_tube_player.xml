<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.philliphsu.clock2.YouTubePlayer"
    tools:layout_editor_absoluteY="25dp">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_Player_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="52dp"
        android:layout_marginBottom="145dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewSnooze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002" />

    <ImageButton
        android:id="@+id/imageButtonLike"
        android:layout_width="90dp"
        android:layout_height="99dp"

        android:layout_marginStart="64dp"
        android:layout_marginTop="180dp"
        android:background="@null"
        android:onClick="onLikeClick"
        android:scaleType="fitCenter"
        android:src="@drawable/like"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_Player_view" />

    <ImageButton
        android:id="@+id/imageButtonUnlike"
        android:layout_width="87dp"
        android:layout_height="99dp"

        android:layout_marginStart="72dp"
        android:layout_marginTop="180dp"
        android:background="@null"
        android:onClick="onUnlikeClick"
        android:scaleType="fitCenter"
        android:src="@drawable/unlike"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLike"
        app:layout_constraintTop_toBottomOf="@+id/youtube_Player_view" />

    <TextView
        android:id="@+id/textViewListen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="128dp"
        android:text="You are listening to "
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_Player_view" />

    <TextView
        android:id="@+id/textViewSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewListen" />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="88dp"
        android:text="Please rate the song so that in the future we can match you better ones"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNoInternet" />

    <ImageView
        android:id="@+id/imageViewSnooze"
        android:layout_width="117dp"
        android:layout_height="125dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="190dp"
        android:onClick="onSnoozeClick"
        android:src="@drawable/snoozesubtitleeng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewDismiss"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNoInternet"
        app:layout_constraintVertical_bias="0.979" />

    <ImageView
        android:id="@+id/imageViewDismiss"
        android:layout_width="162dp"
        android:layout_height="94dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="58dp"
        android:onClick="onDismissClick"
        android:src="@drawable/dismisssubtitleeng"
        app:layout_constraintBottom_toTopOf="@+id/textViewRate"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSnooze"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewSnooze"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageViewNoInternet"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="280dp"
        android:src="@drawable/nowifi"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewRate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /><![CDATA[













    />


