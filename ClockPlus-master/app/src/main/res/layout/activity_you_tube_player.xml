<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.philliphsu.clock2.YouTubePlayer"
    tools:layout_editor_absoluteY="25dp">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube_Player_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonLike"
        android:layout_width="90dp"
        android:layout_height="99dp"

        android:layout_marginStart="64dp"
        android:layout_marginTop="148dp"
        android:background="@null"
        android:onClick="onLikeClick"
        android:scaleType="fitCenter"
        android:src="@drawable/like"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_Player_view" />

    <ImageButton
        android:id="@+id/imageButtonUnlike"
        android:layout_width="87dp"
        android:layout_height="99dp"

        android:layout_marginStart="72dp"
        android:layout_marginTop="148dp"
        android:background="@null"
        android:onClick="onUnlikeClick"
        android:scaleType="fitCenter"
        android:src="@drawable/unlike"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/imageButtonLike"
        app:layout_constraintTop_toBottomOf="@+id/youtube_Player_view" />

    <Button
        android:id="@+id/buttonDismiss"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="2dp"
        android:onClick="onDismissClick"
        android:text="Dismiss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonLike" />

    <Button
        android:id="@+id/buttonSnooze"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="88dp"
        android:onClick="onSnoozeClick"
        android:text="Snooze"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDismiss"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonUnlike" />

    <TextView
        android:id="@+id/textViewListen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="128dp"
        android:text="You are listening to "
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youtube_Player_view" />

    <TextView
        android:id="@+id/textViewSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewListen" />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="88dp"
        android:text="Please rate the song so that in the future we can match you better ones"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    />


